<% include partials/_header %>

<div class="container">
    <div class="row">
        <!-- FORM -->
        <div class="col-md-5">
            <div class="card">
                <div class="card-body">
                    <form action="/agregar" method="post">
                        <div class="form-group">
                            <input type="text" name="nombre" placeholder="Ingrese un Nombre" class="form-control">
                        </div>
                        <div class="form-group">
                                <input type="text" name="apellido" placeholder="Ingrese un Apellido" class="form-control">
                        </div>
                        <button type="submit" class="btn btn-primary btn-block">
                            Agregar
                        </button>
                    </form>
                </div>
            </div>
        </div>
        <!-- TABLA -->
        <div class="col-md-7">
            <table class="table table-bordered table-hover">
                <thead>
                    <tr>
                        <th>NÂº</th>
                        <th>Nombre</th>
                        <th>Apellido</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    <% for (var i = 0; i < usuarios.length; i++) { %>
                    <tr>
                        <td><%= i + 1 %></td>
                        <td><%= usuarios[i].nombre %></td>
                        <td><%= usuarios[i].apellido %></td>
                        <td>
                            <a href="/activar/<%= usuarios[i]._id%>" class="btn <%= usuarios[i].activo ? 'btn-success' : 'btn-dark' %>">
                                Activar
                            </a>
                            <a href="/borrar/<%= usuarios[i]._id%>" class="btn btn-danger">Borrar</a>
                            <a href="/editar/<%= usuarios[i]._id%>" class="btn btn-info">Editar</a>
                        </td>
                    </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>

</div>

<% include partials/_footer %>
    