<% include partials/_header %>

<div class="container">
    <div class="row">
        <!-- FORM -->
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <form action="/agregar" method="post">
                        <div class="form-group">
                            <input type="text" name="nombre" placeholder="Ingrese un Nombre" class="form-control">
                        </div>
                        <div class="form-group">
                                <input type="text" name="apellido" placeholder="Ingrese un Apellido" class="form-control">
                        </div>
                        <div class="form-group">
                                <select name="PerfilId" id="PerfilId" class="form-control" required="true">
                                    <option value="">-- Seleccione --</option>
                                </select>
                        </div>
                        <button type="submit" class="btn btn-primary btn-block">
                            Agregar
                        </button>
                    </form>
                </div>
            </div>
        </div>
        <!-- TABLA -->
        <div class="col-md-8">
            <table class="table table-bordered table-hover">
                <thead>
                    <tr>
                        <th>NÂº</th>
                        <th>Nombre</th>
                        <th>Apellido</th>
                        <th>Perfil</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody id="bodyTablaUsuarios">
                    
                </tbody>
            </table>
        </div>
    </div>

</div>

<% include partials/_footer %>


<script>
    var arrUsuarios = <%- JSON.stringify(usuarios) %>;
    var arrPerfiles = <%- JSON.stringify(perfiles) %>;

    function dibujarTablaUsuarios(){
        $('#bodyTablaUsuarios').find('tr').remove();
    
        for (var i = 0; i < arrUsuarios.length; i++)
        {
            var usuario = arrUsuarios[i];

            var body = document.getElementById("bodyTablaUsuarios");
            var row = body.insertRow();

            row.id = i;
            
            var num = row.insertCell(0);
            var nombre = row.insertCell(1);
            var apellido = row.insertCell(2);
            var perfil = row.insertCell(3);
            var acciones = row.insertCell(4);

            num.innerHTML = i + 1;
            nombre.innerHTML = usuario.nombre;
            apellido.innerHTML = usuario.apellido;

            if (usuario.Perfile != null){
                perfil.innerHTML = usuario.Perfile.descripcion;
            }else{
                perfil.innerHTML = '';
            }
            
            
            dibujarAccionesDeUsuario(acciones, usuario);
        }
    }

    function dibujarAccionesDeUsuario(contenedor, usuario){
        //Agrega boton activar
        var aActivar = document.createElement('a');
        aActivar.setAttribute('href','/activar/' + usuario.id);

        if (usuario.activo){
            aActivar.setAttribute('class','btn btn-success');
            aActivar.text = 'Desactivar';
        }else{
            aActivar.setAttribute('class','btn btn-dark');
            aActivar.text = 'Activar';
        }

        contenedor.appendChild(aActivar);

        //Agrega boton Borrar
        var aBorrar = document.createElement('a');
        aBorrar.setAttribute('href','/borrar/' + usuario.id);
        aBorrar.setAttribute('class','btn btn-danger ml-2');
        aBorrar.text = 'Borrar';
        contenedor.appendChild(aBorrar);

        //Agrega boton Editar
        var aEditar = document.createElement('a');
        aEditar.setAttribute('href','/editar/' + usuario.id);
        aEditar.setAttribute('class','btn btn-info ml-2');
        aEditar.text = 'Editar';
        contenedor.appendChild(aEditar);
    }

    function dibujarSelectPerfiles(){
        $('#PerfilId').find('option').remove();

        $('#PerfilId').append(
            $("<option></option>").attr("value", '').text('-- Seleccione --')
        );

        for (var i = 0; i < arrPerfiles.length; i++){
            var perfil = arrPerfiles[i];
            var option = $("<option></option>").attr("value", perfil.id).text(perfil.descripcion);
            
            $('#PerfilId').append(option);
        }
    }

    $( document ).ready(function() {
        dibujarSelectPerfiles();
        dibujarTablaUsuarios();
    });
</script>