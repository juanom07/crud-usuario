<% include partials/_header %>

<div class="container">
    <div class="row">
        <div class="col-md-6 offset-3">
            <div class="card">
                <div class="card-body">
                    <form action="/editar/<%= usuario.id %>" method="post">
                        <div class="form-group">
                            <input type="text" name="nombre" id="nombre" placeholder="Ingrese un Nombre" class="form-control">
                        </div>
                        <div class="form-group">
                                <input type="text" name="apellido" id="apellido" placeholder="Ingrese un Apellido" class="form-control">
                        </div>
                        <div class="form-group">
                            <select name="PerfilId" id="PerfilId" class="form-control" required="true">
                                <option value="">-- Seleccione --</option>
                            </select>
                        </div>
                        <button type="submit" class="btn btn-primary btn-block">
                            Editar
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<% include partials/_footer %>

<script>
    var usuario = <%- JSON.stringify(usuario) %>;
    var arrPerfiles = <%- JSON.stringify(perfiles) %>;

    function dibujarDatosUsuario(){
        $('#nombre').val(usuario.nombre);
        $('#apellido').val(usuario.apellido);

        if (usuario.Perfile != null){
            $('#PerfilId').val(usuario.Perfile.id);
        }
    }

    function dibujarSelectPerfiles(){
        $('#PerfilId').find('option').remove();

        $('#PerfilId').append(
            $("<option></option>").attr("value", '').text('-- Seleccione --')
        );

        for (var i = 0; i < arrPerfiles.length; i++){
            var perfil = arrPerfiles[i];
            var option = $("<option></option>").attr("value", perfil.id).text(perfil.descripcion);
            
            $('#PerfilId').append(option);
        }
    }

    $( document ).ready(function() {
        dibujarSelectPerfiles();
        dibujarDatosUsuario();
    });
</script>